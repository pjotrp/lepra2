%h1 
  = @person.show_name

%table
  %tr
    %td reg#
    %td
      = @person.registration
  %tr
    %td name
    %td 
      = @person.show_name
  %tr
    %td born
    %td 
      = @person.year_of_birth

  %tr
    %td gender
    %td 
      = @person.gender

  %tr
    %td village
    %td 
      = @person.village

  %tr
    %td clinic
    %td 
      = @person.clinic
%p
  = link_to 'Edit', edit_person_path(@person)
  |
  = link_to 'Back', people_path
%hr
%h3
  Personal history
  %ul
    - @person.personal_histories.each do |hist|
      %li
        = link_to hist.date.to_s, edit_personal_history_path(hist)
        %nbsp (
        = hist.id
        )
  = link_to 'Create', new_personal_history_path
%hr
